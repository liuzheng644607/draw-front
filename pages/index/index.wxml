<!--index.wxml-->
<view class="container">
    <canvas style="width: 100%; height: {{sysInfo.windowWidth}}px" canvas-id="my-canvas" disable-scroll="{{true}}"
        bindtouchstart="onTouchStart"
        bindtouchmove="onTouchMove"
        bindtouchend="onTouchEnd"
        bindtouchcancel="onTouchEnd"
    ></canvas>
    <view class="icon-container">
        <view class="icon-btn eraser" bindtap="useEraser">
            <image style="width: 100%; height: 100%;" src="../../source/eraser.png" mode="aspectFit" />
        </view>
        <view class="icon-btn color">
            <image style="width: 100%; height: 100%;" src="../../source/color.png" mode="aspectFit" />
        </view>
    </view>
</view>
